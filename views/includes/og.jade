title= meta.title
link(rel="canonical" href=meta.canonical)
meta(name="referrer" content='always')

meta(property='og:site_name' content=meta.siteName)
meta(property='og:title' content=meta.title)
meta(property='og:url' content=meta.url)
meta(property='og:type' content=meta.type)
//- website
//- article
//- blog
//- author
if meta.article
  if meta.article.createdAt
  meta(property='article:published_time' content=meta.article.createdAt)
  meta(property='article:modified_time' content=meta.article.updatedAt)
  meta(property='article:section' content=meta.article.section)
  meta(property='article:tag' content=meta.article.tag)
  
meta(property='og:description' content=meta.description)
each image in meta.images
  meta(property='og:image' content=image)
  meta(name='twitter:image' content=image)
meta(name='twitter:card' content='summary')
meta(name='twitter:title' content=meta.title)
meta(name='twitter:description' content=meta.description)
meta(name='twitter:url' content=meta.url)
