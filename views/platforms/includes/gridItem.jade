.platformItem
  a(href=platform.webUrl)
    img(src=`/images/pics/${encodeURIComponent(platform.name)}.png` )
  h3
    a(href=platform.webUrl)= platform.name
  .meta  
    a(href=platform.webUrl title=numeral(platform.projectsCount).format('0,0')) #{numeral(platform.projectsCount).format('0a')} projects