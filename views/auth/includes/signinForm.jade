form.defaultForm(action="/auth/login" method="post" name="signin")
  
  .field
    input(type="text" name="identifier" placeholder="Username or email address" required)
  
  .field
    input(type="password" name="password" placeholder="Password" required)
  
  .field-description 
    a(href="/auth/recover") Forgot password?

  .field.buttons.center
    button.btn.btn-action.btn-wide(type="submit") Sign in
    
