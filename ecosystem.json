{
  "apps": [
    {
      "name"      : "WEB",
      "node_args" : "--harmony",
      "script"    : "bin/www",
      "instances" : 1,
      "autorestart": true,
      "watch": true,
      "ignore_watch": [
        "node_modules", 
        "assets", 
        "public",
        "views",
        "tasks",
        ".git"
      ],
      "env": {
        "API_BASE_URL": "http://localhost:3001",
        "PORT": 3000
      },
      "env_production" : {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy" : {
    "production" : {
      "user" : "node",
      "host" : "212.83.163.1",
      "ref"  : "origin/master",
      "repo" : "git@bitbucket.org:Kulakowka/libtuts-frontend.git",
      "path" : "/var/www/production",
      "post-deploy" : "npm install ; pm2 startOrRestart --env production"
    }
  }
}
