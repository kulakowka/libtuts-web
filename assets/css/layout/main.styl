body 
  padding 0px
  margin 0
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  color #222

* 
  box-sizing border-box

a 
  color #00B7FF
  text-decoration none
  &:hover
    text-decoration underline

input,
select,
textarea,
button
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
html,body{
  min-height 100%
  height 100%
}
html{
  height 100%
}
.layout
  max-width 1024px
  position relative
  outline 1px solid yellow
  margin auto
  overflow hidden
  min-height 100%
footer
  background #eee
  position absolute
  right 0px
  bottom 0px
  left 0px
  padding 20px

.layout > .content
  width 700px
  padding-bottom 150px
.search
  background #eee
  position absolute
  right 0px
  top 50px
  padding 20px
  width 300px

.search h3
  margin 0 0 20px

.search .field + .field 
  margin-top 10px

.search .label
  margin-bottom 5px
  font-size 10px

.search input
  padding 5px 10px
  width 100%

.search button
  padding 4px 10px
