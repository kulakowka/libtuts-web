body 
  padding 0px
  margin 0
  color #222
  background white

body,  
input,
select,
textarea,
button
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif

* 
  box-sizing border-box

a
  text-decoration none
  color mediumblue
  &:hover
    text-decoration underline
  &:visited
    color mediumorchid

html, 
body
  min-height 100%
  height 100%

html
  height 100%

.layout
  max-width 1024px
  position relative
  margin -60px auto -61px
  padding 60px 0 61px
  
