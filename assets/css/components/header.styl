header
  background #fff
  z-index 2
  // border-bottom 1px solid #eee
  box-shadow 0px 1px 2px 0px rgba(0, 0, 0, 0.2)
  text-align center
  position relative
  .inner
    min-height 60px
    line-height 60px
    max-width 1024px
    margin auto
    nav
      font-size 1.1em
      // text-transform uppercase
      a.item
        color #222
        font-weight bold
        display inline-block
        padding 0px 20px
        &:first-letter
          text-transform uppercase
      a.item:hover
        text-decoration none
        background deeppink
        color white
      
      a.item.active
        color counter
      a.item.counter
        color rgb(255, 20, 147)
        &:hover
          color white
        
    .siteName
      color #222
      font-size 1.4em
      font-weight bold
      display inline-block
      padding 0px 0px
      
      padding 0px 20px
      float left
      &:hover
        text-decoration none
        background deeppink
        color white
    nav.mainMenu
      float left
    nav.userMenu,
    nav.guestMenu
      float right
      