header
  background #fff
  z-index 1
  border-bottom 1px solid #eee
  text-align center
  position relative
  .inner
    min-height 60px
    line-height 60px
    max-width 1024px
    margin auto
    nav
      font-size 1.2em
      // text-transform uppercase
      a
        color #222
        font-weight bold
        display inline-block
      a.active
        color deeppink
      a + a
        margin-left 1.5em
    nav.mainMenu
      float left
    nav.userMenu,
    nav.guestMenu
      float right
      