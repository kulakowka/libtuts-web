.languagesGrid 
  margin -1.2em 0
  .languageItem
    width 25%
    padding-right 2%
    display inline-block
    vertical-align top
    margin 1.2em 0
    position relative
    padding-left 4em
    // &:first-child
    //   margin-top 0
    h3
      font-size 1.2em
      margin 0 0 3px
      text-transform capitalize
      word-break break-word
      a
        color #222
    .meta
      white-space nowrap
      color grey
      font-size 0.9em
      a
        color grey
      a + a
        margin-left 10px
    img
      width 3em
      display block
      position absolute
      left 0
      top 0